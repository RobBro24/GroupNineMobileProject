<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroupNineMobileProject.GamesPage"
             Title="GamesPage">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Settings" FontSize="24" VerticalOptions="Center" HorizontalOptions="Center" />
            
            <Label Text="App Theme" FontSize="Body"/>
            <Picker Title="Select Theme" ItemsSource="" SelectedItem=""/>

            <Label Text="Notifications" FontSize="Body"/>
            <Switch IsToggled="{Binding}"/>
            <Label Text="Enable Notifications"/>

            <Label Text="Sort Games By" FontSize="Body"/>
            <Picker Title="Sort By" ItemsSource="" SelectedItem=""/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>