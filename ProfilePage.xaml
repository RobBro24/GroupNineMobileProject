<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroupNineMobileProject.ProfilePage"
             xmlns:controls="clr-namespace:AlohaKit.Controls;assembly=AlohaKit"
             Title="ProfilePage">

    <VerticalStackLayout>
        <Label 
            x:Name="UsernameLabel"
            Text="Username:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button 
            Text="Sign Out"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="SignOutButton" />

        <Button 
            Text="Delete Account"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="DeleteButton" />

        <Label Text="Logged Games:"
               FontAttributes="Bold"
               FontSize="18"
               Margin="0,0,0,10" />

        <CollectionView x:Name="LoggedGamesListView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="10" Margin="0,0,0,10">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Summary}" LineBreakMode="TailTruncation" />
                            <Label Text="{Binding Publisher}" FontAttributes="Italic" />
                            <controls:Rating Value="{Binding Rating}" IsReadOnly="True" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>