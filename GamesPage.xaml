<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GroupNineMobileProject"
             xmlns:controls="clr-namespace:AlohaKit.Controls;assembly=AlohaKit"
             x:Class="GroupNineMobileProject.GamesPage"
             Title="Games">

    <VerticalStackLayout Padding="20">

        <!-- Removed Search Section -->

        <CollectionView ItemsSource="{Binding Games}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="0,5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" 
                                   FontAttributes="Bold" 
                                   FontSize="18"/>
                            <Label Text="{Binding Summary}" 
                                   FontSize="14"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="4"/>


                            <Label Text="Rating:"
                                   FontAttributes="Bold"/>
                            <controls:Rating
                                    Grid.Row="3"
                                    Value="{Binding Rating, Mode=TwoWay}" />

                            <Label Text="Publisher(s):"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding InvolvedCompanies[0].Company.Name}" />
                            <Button x:Name="logButton" Text="Log this game" Clicked="logButton_Clicked" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
